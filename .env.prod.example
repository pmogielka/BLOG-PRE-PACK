# ===========================================
# Blog Pre-Pack - Production Environment (VPS)
# ===========================================
# Copy this file to .env on VPS and set secure values
# NEVER commit this file with real credentials!

# PostgreSQL
POSTGRES_USER=prepack_prod
POSTGRES_PASSWORD=<GENERATE_STRONG_PASSWORD_HERE>
POSTGRES_DB=prepack_cms_prod

# Redis
REDIS_PASSWORD=<GENERATE_STRONG_PASSWORD_HERE>

# Payload CMS
PAYLOAD_SECRET=<GENERATE_MIN_32_CHAR_SECRET_HERE>

# n8n
N8N_DB=prepack_n8n_prod
N8N_ENCRYPTION_KEY=<GENERATE_ENCRYPTION_KEY_HERE>

# URLs (Production)
NEXT_PUBLIC_CMS_URL=https://cms.prepack.pl
CMS_INTERNAL_URL=http://prepack-cms:3000

# Node
NODE_ENV=production

# Traefik (if using standalone Traefik)
ACME_EMAIL=admin@prepack.pl
# Generate with: htpasswd -nb admin yourpassword
TRAEFIK_DASHBOARD_AUTH=admin:$$apr1$$...


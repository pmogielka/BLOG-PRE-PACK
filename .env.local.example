# ===========================================
# Blog Pre-Pack - Local Development Environment
# ===========================================
# Copy this file to .env and adjust values as needed
# cp .env.local.example .env

# PostgreSQL
POSTGRES_USER=prepack
POSTGRES_PASSWORD=prepack_local_secret_2024
POSTGRES_DB=prepack_cms

# Redis (no password for local dev)
REDIS_PASSWORD=

# Payload CMS
PAYLOAD_SECRET=prepack-local-development-secret-key-32-chars

# n8n
N8N_DB=prepack_n8n
N8N_ENCRYPTION_KEY=prepack-n8n-encryption-key-local

# URLs (Local)
NEXT_PUBLIC_CMS_URL=http://localhost:3013
CMS_INTERNAL_URL=http://prepack-cms:3000

# Node
NODE_ENV=development

# ===========================================
# Port Mapping (for reference)
# ===========================================
# Web:        localhost:3012
# CMS:        localhost:3013
# PostgreSQL: localhost:5438
# Redis:      localhost:6385
# n8n:        localhost:5684
# Traefik:    localhost:8080 (dashboard)
